<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".viewListingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".viewListingActivity">

        <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Street Address"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_margin="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="1234 Buckeye Road"
            android:id="@+id/address_bar"
            android:layout_margin="10sp"
            app:layout_constraintTop_toBottomOf="@id/address" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/address_spacer"
            app:layout_constraintTop_toBottomOf="@id/address_bar" />



        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_margin="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/address_spacer" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Columbus"
            android:id="@+id/city_bar"
            android:layout_margin="10sp"
            app:layout_constraintTop_toBottomOf="@id/city" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/city_spacer"
            app:layout_constraintTop_toBottomOf="@id/city_bar" />



        <TextView
            android:id="@+id/zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZIP Code"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_margin="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/city_spacer" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="43210"
            android:id="@+id/zip_bar"
            android:layout_margin="10sp"
            app:layout_constraintTop_toBottomOf="@id/zip" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/zip_spacer"
            app:layout_constraintTop_toBottomOf="@id/zip_bar" />



        <TextView
            android:id="@+id/bedroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bedroom"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_margin="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/zip_spacer" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="1, 2, 3, 4, etc."
            android:id="@+id/bedroom_bar"
            android:layout_margin="10sp"
            app:layout_constraintTop_toBottomOf="@id/bedroom" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/bedroom_spacer"
            app:layout_constraintTop_toBottomOf="@id/bedroom_bar" />



        <TextView
            android:id="@+id/bathroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bathroom"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_margin="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bedroom_spacer" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="1, 2, 3, 4, etc."
            android:id="@+id/bathroom_bar"
            android:layout_margin="10sp"
            app:layout_constraintTop_toBottomOf="@id/bathroom" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/bathroom_spacer"
            app:layout_constraintTop_toBottomOf="@id/bathroom_bar" />



        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_margin="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bathroom_spacer" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="contact@domain.com"
            android:id="@+id/email_bar"
            android:layout_margin="10sp"
            app:layout_constraintTop_toBottomOf="@id/email" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/email_spacer"
            app:layout_constraintTop_toBottomOf="@id/email_bar" />



        <TextView
            android:id="@+id/url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listing URL"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_margin="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email_spacer" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="https://cooper-properties.com/XXXXXX"
            android:id="@+id/url_bar"
            android:layout_margin="10sp"
            app:layout_constraintTop_toBottomOf="@id/url" />

        <Space
            android:id="@+id/url_spacer"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@id/url_bar" />



        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_margin="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/url_spacer" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="(123) 456-7890"
            android:id="@+id/phone_bar"
            android:layout_margin="10sp"
            app:layout_constraintTop_toBottomOf="@id/phone" />

        <Space
            android:id="@+id/phone_spacer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/phone_bar" />



        <TextView
            android:id="@+id/rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Rent"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_margin="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_spacer" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="$800"
            android:id="@+id/rent_bar"
            android:layout_margin="10sp"
            app:layout_constraintTop_toBottomOf="@id/rent" />

        <Space
            android:id="@+id/rent_spacer"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/rent_bar" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Create/Update"
            android:background="@android:color/holo_blue_bright"
            android:id="@+id/create_button"
            android:onClick="updateListing"
            app:layout_constraintTop_toBottomOf="@id/rent_spacer"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:text="Delete"
            android:id="@+id/delete_button"
            android:onClick="deleteListing"
            app:layout_constraintTop_toBottomOf="@id/create_button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>